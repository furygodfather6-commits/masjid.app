<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/analysis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year 2024 Analysis"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <TextView android:text="Kul Sadasya:" style="@style/AnalysisLabel"/>
        <TextView android:id="@+id/stat_total_members" style="@style/AnalysisValue" tools:text="150"/>

        <TextView android:text="Is Saal Kul Chanda:" style="@style/AnalysisLabel"/>
        <TextView android:id="@+id/stat_yearly_potential" style="@style/AnalysisValue" tools:text="₹1,80,000"/>

        <TextView android:text="Is Saal Kul Jama:" style="@style/AnalysisLabel"/>
        <TextView android:id="@+id/stat_yearly_collected" style="@style/AnalysisValue.Green" tools:text="₹1,50,000"/>

        <TextView android:text="Is Saal Kul Bakaya:" style="@style/AnalysisLabel"/>
        <TextView android:id="@+id/stat_yearly_pending" style="@style/AnalysisValue.Red" tools:text="₹30,000"/>

        <Space android:layout_columnSpan="2" android:layout_height="12dp"/>

        <TextView android:text="Is Maah Jama:" style="@style/AnalysisLabel"/>
        <TextView android:id="@+id/stat_monthly_collected" style="@style/AnalysisValue.Green" tools:text="₹12,500"/>

        <TextView android:text="Is Maah Bakaya:" style="@style/AnalysisLabel"/>
        <TextView android:id="@+id/stat_monthly_pending" style="@style/AnalysisValue.Red" tools:text="₹2,500"/>

        <TextView android:text="Pichle Maah se Jama:" style="@style/AnalysisLabel"/>
        <TextView android:id="@+id/stat_month_comparison" style="@style/AnalysisValue" tools:text="+₹500 (4%)"/>

    </GridLayout>

</LinearLayout>