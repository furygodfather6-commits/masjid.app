<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/prayer_card_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/prayer_timetable"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_hijri_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    tools:text="14 Rabi' al-awwal 1446" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_qibla"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qibla"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_qibla_compass"
                    app:iconPadding="8dp"
                    app:iconTint="?attr/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="?attr/colorPrimary" />

                <LinearLayout
                    android:id="@+id/prayer_pills_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_hijri_date">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pill_fajr"
                        style="@style/PrayerPillButton.Active"
                        android:text="@string/fajr" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pill_dhuhr"
                        style="@style/PrayerPillButton"
                        android:text="@string/dhuhr" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pill_asr"
                        style="@style/PrayerPillButton"
                        android:text="@string/asr" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pill_maghrib"
                        style="@style/PrayerPillButton"
                        android:text="@string/maghrib" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pill_isha"
                        style="@style/PrayerPillButton"
                        android:text="@string/isha" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prayer_times_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prayer_pills_container">

                    <TextView
                        android:id="@+id/time_fajr"
                        style="@style/PrayerTime"
                        tools:text="05:30 AM" />

                    <TextView
                        android:id="@+id/time_dhuhr"
                        style="@style/PrayerTime"
                        tools:text="01:15 PM" />

                    <TextView
                        android:id="@+id/time_asr"
                        style="@style/PrayerTime"
                        tools:text="04:45 PM" />

                    <TextView
                        android:id="@+id/time_maghrib"
                        style="@style/PrayerTime"
                        tools:text="07:00 PM" />

                    <TextView
                        android:id="@+id/time_isha"
                        style="@style/PrayerTime"
                        tools:text="08:30 PM" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sunrise_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prayer_times_container"
                    tools:text="Sunrise: 06:15 AM" />


                <View
                    android:id="@+id/divider_top"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sunrise_time" />

                <FrameLayout
                    android:id="@+id/prayer_ring_container"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_top">

                    <ProgressBar
                        android:id="@+id/prayer_ring"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/prayer_ring_bg"
                        android:progress="75"
                        android:progressDrawable="@drawable/prayer_ring_progress" />

                    <TextView
                        android:id="@+id/prayer_ring_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/prayer_ring"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/btn_pause_azan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_media_pause"
                        android:visibility="gone"
                        app:tint="?attr/colorPrimary"
                        tools:visibility="visible" />
                </FrameLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/next_prayer_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/prayer_ring_container"
                    app:layout_constraintEnd_toStartOf="@id/btn_alerts"
                    app:layout_constraintStart_toEndOf="@id/prayer_ring_container"
                    app:layout_constraintTop_toTopOf="@id/prayer_ring_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_next_prayer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:text="Maghrib" />

                            <TextView
                                android:id="@+id/tv_next_prayer_countdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                tools:text="-01:24:17" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_next_prayer_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            tools:text="07:00 PM" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:id="@+id/btn_alerts"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_alert_bell"
                    app:layout_constraintBottom_toBottomOf="@id/next_prayer_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/next_prayer_card" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>