<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Night Mode -->
    <!-- Using the same theme for both day and night for a consistent professional look -->
    <style name="Theme.MasjideAman" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- New Islamic Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
    </style>
</resources>

