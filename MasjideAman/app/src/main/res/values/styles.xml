<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MonthHeader">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MonthCell">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">âœ˜</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="DashboardStatContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="DashboardStatTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DashboardStatValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DashboardStatValue.Green" parent="DashboardStatValue">
        <item name="android:textColor">@color/green_paid</item>
    </style>

    <style name="DashboardStatValue.Red" parent="DashboardStatValue">
        <item name="android:textColor">@color/red_pending</item>
    </style>

    <style name="CustomTabStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="CompactMonthCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AnalysisLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="AnalysisValue" parent="AnalysisLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="AnalysisValue.Green" parent="AnalysisValue">
        <item name="android:textColor">@color/green_paid</item>
    </style>

    <style name="AnalysisValue.Red" parent="AnalysisValue">
        <item name="android:textColor">@color/red_pending</item>
    </style>

    <style name="NamazTimeRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PrayerPill">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:background">@drawable/bg_prayer_pill</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrayerPill.Active" parent="PrayerPill">
        <item name="android:background">@drawable/bg_prayer_pill_active</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrayerTime">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>