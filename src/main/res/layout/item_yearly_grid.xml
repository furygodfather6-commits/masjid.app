<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/member_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:text="Member Name"
        android:textStyle="bold"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:padding="4dp"
        />

    <TextView android:id="@+id/month_1" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_2" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_3" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_4" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_5" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_6" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_7" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_8" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_9" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_10" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_11" style="@style/MonthCell"/>
    <TextView android:id="@+id/month_12" style="@style/MonthCell"/>
</LinearLayout>

