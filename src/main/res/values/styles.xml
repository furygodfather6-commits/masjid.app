<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ERROR FIX: Theme.MasjideAman wala hissa yahan se hata diya gaya hai -->

    <style name="MonthHeader">
        <item name="android:layout_width">80dp</item> <!-- Fixed width for better alignment -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MonthCell">
        <item name="android:layout_width">80dp</item> <!-- Fixed width for better alignment -->
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">âœ˜</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <!-- Dashboard Styles -->
    <style name="DashboardStatContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DashboardStatTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DashboardStatValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DashboardStatValue.Green">
        <item name="android:textColor">@color/green_paid</item>
    </style>

    <style name="DashboardStatValue.Red">
        <item name="android:textColor">@color/red_pending</item>
    </style>
</resources>

